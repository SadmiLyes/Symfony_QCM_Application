{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}

    <div class="container bg-light mt-5 card p-4 col-lg-4">
        <h3 class="text-center">
            Session
        </h3>
    <hr>
        <table class="table">
            <tbody>
                <tr>
                    <th>name</th>
                    <td>{{ session.author.lastname }}</td>
                </tr>
                <tr>
                    <th>StartDate</th>
                    <td>{{ session.startDate ? session.startDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>EndDate</th>
                    <td>{{ session.endDate ? session.endDate|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="row mx-auto">
            <div class="mr-5">
                {{ include('session/_delete_form.html.twig') }}
            </div>
            <div>
                <a class="btn btn-warning" href="{{ path('session_edit', {'id': session.id}) }}">edit</a>
            </div>
        </div>
        <hr>
        <a class="btn btn-secondary" href="{{ path('session_index') }}">back to list</a>
    </div>
{% endblock %}