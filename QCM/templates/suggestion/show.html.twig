{% extends 'base.html.twig' %}

{% block title %}Suggestion{% endblock %}

{% block body %}
    <h1>Suggestion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ suggestion.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ suggestion.content }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ suggestion.answer ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('suggestion_index') }}">back to list</a>

    <a href="{{ path('suggestion_edit', {'id': suggestion.id}) }}">edit</a>

    {{ include('suggestion/_delete_form.html.twig') }}
{% endblock %}